<section>
    <div class = 'container'>
      <div class="row mt-4">
        <a href="/admin/add-product" class = "btn btn-sm btn-success ml-auto">Add Product</a>
      </div>
        
<table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">N.o</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 50px; height:50px" src="/product-images/{{this._id}}.jpg"></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>